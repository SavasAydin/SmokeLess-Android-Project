<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="20dip">
		
			<LinearLayout android:id="@+id/info_layout"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="130dip">
				
<!-- OVERVIEW THINGGGY -->	
		
	    		<LinearLayout android:orientation="horizontal"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"
	    			android:paddingLeft="10dip"
	    			android:paddingBottom="10dip">
	    			
	       			<TextView android:layout_width="wrap_content"
	    				android:layout_height="wrap_content"
						android:paddingRight="10dip"
						android:text="@string/overview"
						android:textSize="19dip"
						android:textColor="#636262"/>
	   			</LinearLayout>
			
			<TableLayout android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:paddingLeft="5dip"
	    		android:stretchColumns="*">
	    		   				
	   			<TableRow>
	       			<TextView android:text="Today:"
	           			android:textColor="#636262"        			
	           			android:textSize="15dip"
	           			android:padding="5dip"/>
	           			
	       			<TextView android:id="@+id/today"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
		            	android:padding="5dip"/>
		            
		            <TextView android:text="Progress:"
			            android:textColor="#636262"
			            android:textSize="15dip"
			            android:padding="5dip"/>
			            
			        <TextView android:id="@+id/progress"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
			            android:padding="5dip"/>
	   			</TableRow>
	
			    <TableRow>
			        <TextView android:text="This week:"
			            android:textColor="#636262"
			            android:textSize="15dip"
			            android:padding="5dip"/>
			            
			        <TextView android:id="@+id/week"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
			            android:padding="5dip"/>
			            
			        <TextView android:text="Status:"
	           			android:textColor="#636262"
	           			android:textSize="15dip"
	           			android:padding="5dip"/>
	           			
	       			<TextView android:id="@+id/status"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
		            	android:padding="5dip"/>
			    </TableRow>
			    
			    <TableRow>
	       			<TextView android:text="This month:"
	           			android:textColor="#636262"
	           			android:textSize="15dip"
	           			android:padding="5dip"/>
	           			
	       			<TextView android:id="@+id/month"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
		            	android:padding="5dip"/>
		            
		            <TextView android:text="TOTAL:"
			            android:textColor="@android:color/black"
			            android:textSize="15dip"
			            android:padding="5dip"/>
			            
			        <TextView android:id="@+id/total"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
			            android:padding="5dip"/>
	   			</TableRow>
			</TableLayout>
			
<!-- SEPARATOR THINGGGY -->
	
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="2px"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:layout_marginTop="5dip"
			android:background="@drawable/separator">
		</LinearLayout>
			
<!-- AVERAGE THINGGGY -->
					
		    <LinearLayout android:orientation="horizontal"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:paddingLeft="10dip"
    			android:paddingBottom="10dip"
    			android:paddingTop="10dip">
    			
       			<TextView android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
					android:paddingRight="10dip"
					android:text="Average ~"
					android:textSize="19dip"
					android:textColor="#636262"/>
	   		</LinearLayout>
	   		
			<TableLayout android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:paddingLeft="5dip"
	    		android:stretchColumns="*">
	    		   				
	   			<TableRow>
	       			<TextView android:text="Hour:"
	           			android:textColor="#636262"        			
	           			android:textSize="15dip"
	           			android:padding="5dip"/>
	           			
	       			<TextView android:id="@+id/average_hour"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
		            	android:padding="5dip"/>
		            
		            <TextView android:text="Week:"
			            android:textColor="#636262"
			            android:textSize="15dip"
			            android:padding="5dip"/>
			            
			        <TextView android:id="@+id/average_week"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
			            android:padding="5dip"/>
	   			</TableRow>
	
			    <TableRow>
			        <TextView android:text="Day:"
			            android:textColor="#636262"
			            android:textSize="15dip"
			            android:padding="5dip"/>
			            
			        <TextView android:id="@+id/average_day"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
			            android:padding="5dip"/>
			            
			        <TextView android:text="Month:"
	           			android:textColor="#636262"
	           			android:textSize="15dip"
	           			android:padding="5dip"/>
	           			
	       			<TextView android:id="@+id/average_month"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
		            	android:padding="5dip"/>
			    </TableRow>
			</TableLayout>
			
<!-- SEPARATOR THINGGGY -->
	
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="2px"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:layout_marginTop="5dip"
			android:background="@drawable/separator">
		</LinearLayout>
			
<!-- OTHER THINGGGY -->
					
		    <LinearLayout android:orientation="horizontal"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:paddingLeft="10dip"
    			android:paddingBottom="10dip"
    			android:paddingTop="10dip">
    			
       			<TextView android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
					android:paddingRight="10dip"
					android:text="Other ..."
					android:textSize="19dip"
					android:textColor="#636262"/>
	   		</LinearLayout>
	   		
			<TableLayout android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:paddingLeft="5dip"
	    		android:stretchColumns="*">
	    		   				
	   			<TableRow>
	       			<TextView android:text="Info1:"
	           			android:textColor="#636262"        			
	           			android:textSize="15dip"
	           			android:padding="5dip"/>
	           			
	       			<TextView android:id="@+id/average_hour"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
		            	android:padding="5dip"/>
		            
		            <TextView android:text="Info2:"
			            android:textColor="#636262"
			            android:textSize="15dip"
			            android:padding="5dip"/>
			            
			        <TextView android:id="@+id/average_week"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
			            android:padding="5dip"/>
	   			</TableRow>
	
			    <TableRow>
			        <TextView android:text="Info3:"
			            android:textColor="#636262"
			            android:textSize="15dip"
			            android:padding="5dip"/>
			            
			        <TextView android:id="@+id/average_day"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
			            android:padding="5dip"/>
			            
			        <TextView android:text="Info4:"
	           			android:textColor="#636262"
	           			android:textSize="15dip"
	           			android:padding="5dip"/>
	           			
	       			<TextView android:id="@+id/average_month"
		            	android:textColor="@android:color/black"
		            	android:textSize="15dip"
		            	android:padding="5dip"/>
			    </TableRow>
			</TableLayout>
			 			
		</LinearLayout>
		
<!-- SEPARATOR THINGGGY -->
	
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="2px"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:layout_marginTop="5dip"
			android:layout_marginBottom="5dip"
			android:background="@drawable/separator">
		</LinearLayout>
		
<!-- MORE/HIDE THINGGGY -->	
	
		<Button android:id="@+id/expand_button"
			android:layout_width="60dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:paddingBottom="15dip"
			android:text="More..."
			android:textColor="#000000"
			android:background="@android:color/transparent"/>		 		
	 </LinearLayout>
</ScrollView>